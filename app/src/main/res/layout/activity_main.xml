<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.android.exhibit.activities.MainActivity"
    android:background="@drawable/bg"
    android:id="@+id/ma_rl_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ma_welcome"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_marginTop="28dp"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:id="@+id/ma_tv_welcome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ProgressBar android:id="@+id/ma_pb_spinner"
        style="?android:progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_above="@+id/ma_tv_continue"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/ma_tv_name"
        android:background="@drawable/rounded_rectangle"
        android:textColor="@android:color/black"
        android:text="@string/sample_name"
        android:paddingTop="10sp"
        android:layout_alignTop="@+id/ma_pb_spinner"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/ma_pb_spinner"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ma_continue"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:id="@+id/ma_tv_continue"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/holo_orange_dark"/>

</RelativeLayout>
